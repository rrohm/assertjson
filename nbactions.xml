<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>process-test-classes</goal>
                <goal>test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
            </properties>
        </action>
        <action>
            <actionName>debug.test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>process-test-classes</goal>
                <goal>test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
                <forkMode>once</forkMode>
                <maven.surefire.debug>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>jacoco</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>verify</goal>
            </goals>
            <properties>
                <skipTests>false</skipTests>
                <forkMode>once</forkMode>
            </properties>
        </action>
    </actions>
